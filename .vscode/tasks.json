{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "format",
            "type": "shell",
            "command": "clang-format -i ${file}"
        },
        {
            "label": "tidy",
            "type": "shell",
            "command": "clang-tidy ${file} -- -std=c++23"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++23",
                "-O2",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-I",
                "D:/allfolders/code/advanced/cpp/my_cpp_lib/",
                "-Wall",
                "-Wextra",
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.exe"
        },
        {
            "label": "full-pipeline",
            "dependsOn": [
                // "format",
                // "tidy",
                "build",
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}